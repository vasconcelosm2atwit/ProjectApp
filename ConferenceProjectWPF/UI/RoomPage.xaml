<Page
    x:Class="ConferenceProjectWPF.UI.RoomPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ConferenceProjectWPF.UI"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Room Page"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <DockPanel LastChildFill="True">
        <StackPanel Background="red" DockPanel.Dock="Bottom" />
        <StackPanel Background="blue" DockPanel.Dock="Left" />
        <StackPanel DockPanel.Dock="Top">
            <TextBlock
                Margin="10"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                Text="Room" />

        </StackPanel>
        <Grid>
            <StackPanel Margin="0">
                <Grid Width="800" Margin="0,0,0,0">
                    <StackPanel Width="800" Orientation="Horizontal">

                        <materialDesign:PackIcon
                            Width="30"
                            Height="30"
                            Foreground="Purple"
                            Kind="Search" />
                        <TextBox
                            Width="200"
                            Margin="0,0,0,5"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Search"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            FontSize="14"
                            Text="{Binding RoomFilter, UpdateSourceTrigger=PropertyChanged}" />
                        <Button
                            Width="200"
                            Margin="369,0,0,0"
                            HorizontalAlignment="Right"
                            Click="Button_open_createRoom"
                            Content="Create Room" />

                    </StackPanel>
                </Grid>


                <DataGrid
                    x:Name="roomGrid"
                    Width="800"
                    Height="600"
                    Margin="0,0,0,0"
                    AlternatingRowBackground="LightGray"
                    AutoGenerateColumns="False"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CanUserAddRows="False"
                    CanUserResizeColumns="False"
                    GridLinesVisibility="None"
                    HeadersVisibility="Column"
                    ItemsSource="{Binding RoomsCollection}"
                    SelectedItem="{Binding SelectedItem}"
                    SelectionMode="Extended">
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#FF14234F" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Height" Value="35" />
                            <Setter Property="FontSize" Value="12" />
                            <Setter Property="FontFamily" Value="Verdana" />

                        </Style>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FF0000" />

                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="225"
                            Binding="{Binding Name}"
                            Header="Name"
                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Width="225"
                            Binding="{Binding Capacity}"
                            Header="Capacity"
                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Width="70" Header="">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Margin="0"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="Button_open_edit"
                                            Foreground="#FF14234F"
                                            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
                                            <Button.Content>
                                                <materialDesign:PackIcon
                                                    Width="20"
                                                    Height="20"
                                                    Kind="CircleEditOutline" />
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*" Header="">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Margin="0"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="Button_open_delete"
                                            Foreground="Red"
                                            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
                                            <Button.Content>
                                                <materialDesign:PackIcon
                                                    Width="20"
                                                    Height="20"
                                                    Kind="DeleteOffOutline" />
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                </DataGrid>
            </StackPanel>
            <materialDesign:DialogHost
                x:Name="MyDialogHost"
                Height="500"
                Margin="0,0,0,232"
                VerticalAlignment="Center"
                CloseOnClickAway="True"
                DialogTheme="Inherit"
                IsOpen="False"
                OverlayBackground="{DynamicResource PrimaryHueDarkBrush}"
                RenderTransformOrigin="0.496,0.255">
                <materialDesign:DialogHost.DialogContent>
                    <Grid
                        Width="350"
                        Height="280"
                        Margin="10">
                        <StackPanel Margin="10,0,10,0">
                            <StackPanel
                                Width="300"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center">

                                <TextBlock
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="center"
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Text="Edit Room Information" />


                                <TextBox
                                    x:Name="NameTextBox"
                                    Width="300"
                                    Margin="0,0,0,20"
                                    Padding="15,2,20,3"
                                    materialDesign:HintAssist.HelperText="Room Name is required"
                                    materialDesign:HintAssist.Hint="Name"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    materialDesign:TextFieldAssist.HasFilledTextField="True"
                                    FontSize="18"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                    Text="{Binding SelectedItem.Name, Mode=TwoWay}" />
                                <TextBox
                                    x:Name="CapacityTextBox"
                                    Width="300"
                                    Margin="0,20,0,20"
                                    Padding="15,2,20,3"
                                    materialDesign:HintAssist.HelperText="Enter a Room Capacity"
                                    materialDesign:HintAssist.Hint="Capacity"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    materialDesign:TextFieldAssist.HasFilledTextField="True"
                                    FontSize="18"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                    Text="{Binding SelectedItem.Capacity, Mode=TwoWay}" />


                            </StackPanel>
                            <StackPanel
                                Margin="0,40,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal">
                                <Button
                                    Width="100"
                                    Click="Button_confirm_edit"
                                    Content="Confirm" />
                                <Button
                                    Width="100"
                                    Margin="50,0,0,0"
                                    Click="Button_cancel_edit"
                                    Content="Cancel" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>


                <Border
                    MinWidth="256"
                    MinHeight="256"
                    BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                    BorderThickness="0"
                    ClipToBounds="True" />
            </materialDesign:DialogHost>
            <materialDesign:DialogHost
                x:Name="deletePopUp"
                Margin="0,0,0,232"
                IsOpen="False">

                <materialDesign:DialogHost.DialogContent>
                    <Grid Height="100" Margin="20,20,20,20">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                                <TextBlock FontSize="14" Text="Are you sure you want to delete Room " />
                                <TextBlock FontSize="14" Text="{Binding SelectedItem.Name}" />
                                <TextBlock FontSize="14" Text="?" />
                            </StackPanel>
                            <StackPanel
                                Margin="20,35,20,20"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <Button
                                    Width="100"
                                    Height="30"
                                    Background="Red"
                                    Click="Button_confirm_delete"
                                    Content="Confirm" />
                                <Button
                                    Width="100"
                                    Height="30"
                                    Margin="30,0,0,0"
                                    Background="Red"
                                    Click="Button_cancel_delete"
                                    Content="Cancel" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <materialDesign:DialogHost
                x:Name="createDialogHost"
                Height="500"
                Margin="0,0,0,232"
                VerticalAlignment="Center"
                CloseOnClickAway="True"
                DialogTheme="Inherit"
                IsOpen="False"
                OverlayBackground="#FF14234F"
                RenderTransformOrigin="0.496,0.255">
                <materialDesign:DialogHost.DialogContent>
                    <Grid
                        Width="350"
                        Height="300"
                        Margin="10">
                        <StackPanel Margin="20,20,20,0">

                            <StackPanel>
                                <StackPanel Margin="10,0,10,0">
                                    <StackPanel
                                        Width="300"
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Center">

                                        <TextBlock
                                            Margin="0,0,0,10"
                                            HorizontalAlignment="center"
                                            FontSize="15"
                                            FontWeight="Bold"
                                            Text="Create Room" />


                                        <TextBox
                                            x:Name="newNameTextBox"
                                            Width="300"
                                            Margin="0,0,0,20"
                                            Padding="15,2,20,3"
                                            materialDesign:HintAssist.HelperText="Name is required"
                                            materialDesign:HintAssist.Hint="Name"
                                            materialDesign:TextFieldAssist.HasClearButton="True"
                                            materialDesign:TextFieldAssist.HasFilledTextField="True"
                                            FontSize="18"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                        <TextBox
                                            x:Name="newCapacityTextBox"
                                            Width="300"
                                            Margin="0,20,0,20"
                                            Padding="15,2,20,3"
                                            materialDesign:HintAssist.HelperText="Enter Room Capacity"
                                            materialDesign:HintAssist.Hint="Capacity"
                                            materialDesign:TextFieldAssist.HasClearButton="True"
                                            materialDesign:TextFieldAssist.HasFilledTextField="True"
                                            materialDesign:TransitionAssist.DisableTransitions="True"
                                            FontSize="18"
                                            MaxLength="12"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                                    </StackPanel>
                                    <StackPanel
                                        Margin="0,35,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        Orientation="Horizontal">
                                        <Button
                                            Width="100"
                                            Background="#FF14234F"
                                            Click="Button_confirm_creation"
                                            Content="Confirm" />
                                        <Button
                                            Width="100"
                                            Margin="50,0,0,0"
                                            Background="#FF14234F"
                                            Click="Button_cancel_creation"
                                            Content="Cancel" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                    </Grid>
                </materialDesign:DialogHost.DialogContent>


                <Border
                    MinWidth="256"
                    MinHeight="256"
                    BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                    BorderThickness="0"
                    ClipToBounds="True" />
            </materialDesign:DialogHost>

        </Grid>
    </DockPanel>
</Page>
